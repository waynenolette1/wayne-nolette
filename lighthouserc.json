{
  "ci": {
    "collect": {
      "startServerCommand": "npm run preview",
      "startServerReadyPattern": "ready in",
      "url": [
        "http://localhost:4321/wayne-nolette/index.html",
        "http://localhost:4321/wayne-nolette/writing/index.html",
        "http://localhost:4321/wayne-nolette/case-studies/index.html",
        "http://localhost:4321/wayne-nolette/case-studies/mcp-server-marketing-apis/index.html",
        "http://localhost:4321/wayne-nolette/resume/index.html"
      ],
      "numberOfRuns": 1,
      "settings": {
        "preset": "desktop",
        "throttling": {
          "cpuSlowdownMultiplier": 1
        }
      }
    },
    "assert": {
      "assertions": {
        "categories:performance": ["warn", { "minScore": 0.9 }],
        "categories:accessibility": ["warn", { "minScore": 0.95 }],
        "categories:best-practices": ["warn", { "minScore": 0.9 }],
        "categories:seo": ["warn", { "minScore": 0.9 }],
        "first-contentful-paint": ["warn", { "maxNumericValue": 2000 }],
        "largest-contentful-paint": ["warn", { "maxNumericValue": 2500 }],
        "cumulative-layout-shift": ["warn", { "maxNumericValue": 0.1 }],
        "total-blocking-time": ["warn", { "maxNumericValue": 300 }],
        "color-contrast": "error",
        "image-alt": "error",
        "label": "error",
        "link-name": "error",
        "button-name": "error",
        "meta-description": "warn",
        "document-title": "warn",
        "html-has-lang": "error",
        "meta-viewport": "warn",
        "font-size": "warn"
      }
    },
    "upload": {
      "target": "temporary-public-storage"
    }
  }
}
