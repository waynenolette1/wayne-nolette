<script>
  let resumeListenerRegistered = false;

  function initShowMore() {
    document
      .querySelectorAll<HTMLButtonElement>('.show-more-btn')
      .forEach((btn) => {
        btn.addEventListener('click', () => {
          const job = btn.closest('.job');
          if (!job) return;
          const highlights = job.querySelector('.highlights');
          if (!highlights) return;

          const expanded = highlights.classList.toggle('expanded');
          btn.setAttribute('aria-expanded', String(expanded));
          const textEl = btn.querySelector('.show-more-text');
          if (textEl) {
            const collapsibleCount =
              highlights.querySelectorAll('.collapsible').length;
            textEl.textContent = expanded
              ? 'Show less'
              : `Show ${collapsibleCount} more`;
          }
        });
      });
  }

  initShowMore();

  if (!resumeListenerRegistered) {
    resumeListenerRegistered = true;
    document.addEventListener('astro:after-swap', initShowMore);
  }
</script>
